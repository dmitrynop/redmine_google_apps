<div class="contextual">
<%= link_to l(:label_auth_source_new), {action: 'new', type: "AuthSourceGoogleApp"}, :class => 'icon icon-add' %>
</div>

<h2><%=l(:label_auth_source_plural)%></h2>

<table class="list">
  <thead><tr>
    <th><%=l(:field_name)%></th>
    <th><%=l(:field_host)%></th>
    <th><%=l(:label_user_plural)%></th>
    <th></th>
  </tr></thead>
  <tbody>
<% @auth_sources.select {|x| x.auth_method_name == "Google App" }.each do |source| %>
  <tr id="auth-source-<%= source.id %>" class="<%= cycle("odd", "even") %>">
    <td><%= link_to(h(source.name), :action => 'edit', :id => source)%></td>
    <td align="center"><%= source.host %></td>
    <td align="center"><%= source.users.count %></td>
    <td class="buttons">
      <%= link_to l(:button_delete), { :action => 'destroy', :id => source },
                                                        :method => :delete,
                                                        :confirm => l(:text_are_you_sure),
                                                        :class => 'icon icon-del',
                                                        :disabled => source.users.any? %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>